#include <iostream>

using namespace std;

int main()
{
    // N - размерность массива, i - переменная для обхода массива (индекс текущего элемента массива)
    unsigned int N;

    // Вводим размерность массива
    cin >> N;

    // Объявляем массив размерности N
    int x[N];
    // Вводим данные в элементы массива
    for (int i = 0; i < N; i++) {
        cin >> x[i];
    }

    // Вычисляем сумму всех элементов массива
    int totalSum = 0;
    for (int i = 0; i < N; i++) {
        totalSum += x[i];
    }

    int leftSum = 0;
    bool flag = true;

    // Обходим массив и ищем индекс первого оптимального дня
    for (int i = 0; i < N; i++) {
        totalSum -= x[i]; // Уменьшаем общую сумму на текущий элемент
        if (leftSum == totalSum) {
            // Суммы слева и справа равны, это оптимальный день
            cout << i;
            flag = false;
            break;
        }
        leftSum += x[i]; // Увеличиваем сумму слева на текущий элемент
    }

    // Если не нашли оптимальный день, выводим -1
    if (flag) {
        cout << -1;
    }

    return 0;
}
