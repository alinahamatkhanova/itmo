#include <iostream>
using namespace std;

bool is_sorted(int arr[], int n){ //проверяю, отсортирован ли массив в порядке возрастания
    for (int i = 0; i < n-1; i++){ //прохожусь по элементам и сравниваю каждый с его следующим
        if (arr[i] > arr[i+1]){
            return false; } //eсли нахожу элемент, который больше следующего, возвращаю false
    }
    return true; //если не нахожу, возвращаю true
}

int main() {
    int n; //количество лошадей в скачках
    cin >> n;
    int arr[n]; //массив, в котором хранится количество тугриков у хозяев лошадей в порядке, определенном жребием

    for (int i = 0; i < n; i++){
        cin >> arr[i];
    }
    int stop = 0;

    while (stop!= n - 1){ //сортировка массива. цикл будет выполняться до тех пор, пока флаг не будет равен n - 1
        stop = 0;
        for (int i = 0; i < n - 1; i++){ // проход по всем элемениам массива
            if (arr[i] > arr[i + 1] && arr[i] > 0){ // если текущая лошадь больше следующей и больше 0(чтобы у владельца лошади были деньги на обмен), происходит обмен
                if (arr[i] - arr[i + 1] == 1){
                    cout << ":(";
                    return 0;
                }
                swap(arr[i + 1], arr[i]); // владельцу текущей лошади дается 1 тугрик хозяину следующей лошади
                arr[i + 1]--; arr[i]++; // рост текущей лошади уменьшается, следующей - увеличивается
            } else{
                stop++; //флаг увеличивается, когда происходит обмен местами, удовлетворяющих условию их роста, и нет больше подходящих лошадей для обмена
            }
        }
    }

    if (is_sorted(arr, n)){
        for (int i = 0; i < n; i++){
            cout << arr[i] << " "; //  eсли после завершения цикла while массив отсортирован, вызывается цикл for, который выводит элементы через пробел
        }
    } else{
        cout << ":("; //  если массив не отсортирован
    }

    return 0;
}
